{
  "name": "saucedemo-playwright-ts",
  "version": "1.0.0",
  "private": true,
  "description": "Vrize Course - Playwright TypeScript (cross-browser, mobile, env-config)",
  "scripts": {
    "test": "playwright test",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:mobile": "playwright test --project=\"Mobile Safari\"",
    "test:all": "playwright test --project=chromium --project=firefox --project=webkit --project='Mobile Safari'",
    "report": "playwright show-report",
    "codegen": "playwright codegen https://www.saucedemo.com/",
    "format": "prettier --write \"**/*.{ts,js,json,md}\""
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/node": "^24.2.1",
    "dotenv": "^16.4.5",
    "prettier": "^3.2.5",
    "typescript": "^5.4.0"
  }
}
